import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Veri dosyasını yükle
df = pd.read_csv("data/raw/flights.csv")

# İlk 5 satır
df.head()

# Eksik veri oranları
missing = df.isnull().mean().sort_values(ascending=False)
missing[missing > 0]

# İptal oranı
cancel_counts = df['Cancelled'].value_counts(normalize=True)
sns.barplot(x=cancel_counts.index, y=cancel_counts.values)
plt.title("Uçuş İptal Oranları")
plt.xticks([0, 1], ['Gerçekleşti', 'İptal Edildi'])
plt.ylabel("Oran")
plt.show()

df['FlightDate'] = pd.to_datetime(df['FlightDate'])
df['Month'] = df['FlightDate'].dt.month

# Aylara göre iptal oranı
monthly_cancel = df.groupby('Month')['Cancelled'].mean()
monthly_cancel.plot(kind='bar', title='Aylara Göre İptal Oranı')
plt.ylabel("İptal Oranı")
plt.show()


